# Maintainer: Jens Reidel <adrian@travitia.xyz>
# Reference: <https://postmarketos.org/devicepkg>

pkgname=device-xiaomi-davinci
pkgdesc="Xiaomi Miatoll"
pkgver=1
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="
	linux-postmarketos-qcom-sm7150
	make-dynpart-mappings
	mkbootimg
	postmarketos-base
	postmarketos-update-kernel
	soc-qcom-sm7150
	soc-qcom-sm7150-spmi-vibrator-feedbackd-rules
	soc-qcom-sm7150-unl0kr-msmdrmfb-quirk
"
makedepends="devicepkg-dev"
source="
	deviceinfo
	modules-initfs
"

subpackages="
	$pkgname-nonfree-firmware:nonfree_firmware
"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="Firmware for GPU, Audio, Modem, WiFi, etc."
	depends="
		firmware-xiaomi-miatoll-adsp
		firmware-xiaomi-miatoll-cdsp
		firmware-xiaomi-miatoll-ipa
		firmware-xiaomi-miatoll-modem
		firmware-xiaomi-miatoll-venus
		firmware-xiaomi-miatoll-wlan
		soc-qcom-sm7150-nonfree-firmware
		"
	mkdir "$subpkgdir"
}

